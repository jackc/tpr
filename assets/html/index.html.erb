<html>
<head>
  <script id="login_page_template" type="underscore/template">
    <div>
      <div>Login</div>
      <form>
        <dl>
          <dt>
            <label for="name">User name</label>
          </dt>
          <dd><input type="text" id="name" name="name" autofocus /></dd>

          <dt>
            <label for="password">Password</label>
          </dt>
          <dd><input type="password" id="password" name="password" /></dd>
        </dl>

        <input type="submit" value="Login" />
      </form>
      <a href="#" class="register">Create an account</a>
    </div>
  </script>

  <script id="register_page_template" type="underscore/template">
    <form>
      <dl>
        <dt>
          <label for="name">User name</label>
        </dt>
        <dd><input type="text" id="name" name="name" /></dd>

        <dt>
          <label for="password">Password</label>
        </dt>
        <dd><input type="password" id="password" name="password" /></dd>

        <dt>
          <label for="passwordConfirmation">Password Confirmation</label>
        </dt>
        <dd><input type="password" id="passwordConfirmation" name="passwordConfirmation" /></dd>
      </dl>
      <input type="submit" value="Register" />
    </form>
  </script>

  <script id="home_page_template" type="underscore/template">
    <div>Home</div>
    <a href="#" class="markAllRead">Mark All Read</a>
  </script>

  <script id="item_template" type="underscore/template">
    <li>
      <div class="feedName"><%= feed_name %></div>
      <div class="title">
        <a href="<%= url %>" target="_blank"><%= title %></a>
      </div>
      <div class="publicationTime"><%= publication_time %></div>
    </li>
  </script>

  <script id="subscribe_page_template" type="underscore/template">
    <h1>New Subscription</h1>
    <form>
      <dl>
        <dt>
          <label for="url">Feed URL</label>
        </dt>
        <dd><input type="text" name="url" /></dd>
      </dl>
      <input type="submit" value="Subscribe" />
    </form>
  </script>

  <script id="feeds_page_template" type="underscore/template">
    <h1>Feeds</h1>
  </script>

  <script id="logged_in_header_template" type="underscore/template">
    <h1>Jaguar</h1>
    <a href="#home">Home</a>
    <a href="#subscribe">Subscribe</a>
    <a href="#feeds">Feeds</a>
    <a href="#import">Import</a>
    <a href="#" class="logout">Logout</a>
  </script>

  <script id="import_page_template" type="underscore/template">
    <h1>Import Subscriptions from OPML</h1>
    <form>
      <dl>
        <dt>
          <label for="file">OPML File</label>
        </dt>
        <dd><input type="file" name="file" /></dd>
      </dl>
      <input type="submit" value="Import" />
    </form>
  </script>

  <link type="text/css" rel="stylesheet" href="/css/application.css">
  <script src="/js/application.js"></script>
</head>
<body>
<div id="view"></div>
</body>
</html>